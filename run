#!/bin/bash

#echo "Enter program file to run (c, c++, java, python)"
#read filename
filename="$1" 	
file=${filename%.*}
ext=${filename##*.}
#echo $ext
#echo " "
#read ext

if [ "$ext" = "py" ] || [ "$ext" = "PY" ]
then
	#echo "python"
	python $filename

elif [ "$ext" = "cpp" ] || [ "$ext" = "CPP" ]
then
	#echo "c++"
	g++ $filename -o $file && ./$file

elif [ "$ext" = "c" ] || [ "$ext" = "C" ]
then
	#echo "gcc"	
	gcc $filename -o $file && ./$file

elif [ "$ext" = "java" ]
then
	#echo "gcc"	
	javac $filename && java $file 

elif [ "$ext" = "flex" ]
then
	#echo "flex"	
	flex $filename && gcc lex.yy.c && ./a.out 

elif [ "$ext" = "sh" ]
then
	#echo "bash"	
	./$filename

else
	echo "Unknown file type"
fi
